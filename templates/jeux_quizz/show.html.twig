{% extends 'base.html.twig' %}

{% block title %}JeuxQuizz{% endblock %}

{% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link rel="stylesheet" href="{{ asset("css/nuage.css") }}">
{% endblock %}

{% block body %}
    <h1 class="my-5 text-center">JeuxQuizz</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ jeux_quizz.id }}</td>
            </tr>
            <tr>
                <th>Jeux</th>
                <td>{{ jeux_quizz.Jeux }}</td>
            </tr>
            <tr>
                <th>Thème</th>
                <td>{{ jeux_quizz.themeQuizz.titre }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ jeux_quizz.image }}</td>
            </tr>
            <tr>
                <th>ImageAlt</th>
                <td>{{ jeux_quizz.ImageAlt }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('jeux_quizz_index') }}" class="btn btn-primary">Retour à la liste</a>

    <a href="{{ path('jeux_quizz_edit', {'id': jeux_quizz.id}) }}" class="btn btn-warning">Modifier</a>

    {{ include('jeux_quizz/_delete_form.html.twig') }}
{% endblock %}
