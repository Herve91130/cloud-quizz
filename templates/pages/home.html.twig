{% extends "base.html.twig" %}

{% block title %}Se connecter{% endblock %}

{% block header %}{% include "parts/_header.html.twig" %}{% endblock %}  

{% block body %}
<main>
    <div class="container mt-5">
        <div class="mt-3 pt-2">
            <h3 class="d-flex justify-content-center">Jouez dès maintenant et testez vos connaissance sur nos différents thèmes !</h3>
        </div>
        <div class="row mt-5 g-4 g-lg-5">
            {% for theme_quizz in theme_quizzs %}
                <div class="col-6 col-md-6 col-lg-3">
                    <div class="cartemove card">
                        <img src="{{ asset(theme_quizz.image) }}" class="card-img-top" alt="{{ theme_quizz.ImageAlt }}">
                        <div class="card-body">
                            <h5 class="card-title"></h5>
                            <p class="card-text"></p>
                            <a href="{{ theme_quizz.lien }}" class="btn btn-primary d-flex justify-content-center">{{ theme_quizz.titre }}</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</main>
{% endblock %}